# Server Configuration
PORT=3000
NODE_ENV=development

# Supabase Configuration
# Get these from: https://supabase.com/dashboard -> Project Settings -> API
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# JWT Configuration
# Generate a random secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Firebase Cloud Messaging
# Get from: Firebase Console -> Project Settings -> Cloud Messaging -> Server Key
FCM_SERVER_KEY=your_fcm_server_key_here

# Africa's Talking (SMS) - Optional
# Get from: https://africastalking.com/account
AT_API_KEY=your_africastalking_api_key_here
AT_USERNAME=your_africastalking_username_here

# Email Configuration (Optional - for email notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
